<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".Home">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="59dp"
        android:src="@drawable/kutslogo"
        app:layout_constraintBottom_toTopOf="@+id/btnAddStop_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/btnDisplayMap_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="77dp"
        android:background="@color/bgGrey"
        android:src="@drawable/viewmap"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnSV_home"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/btnSignOut_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="2dp"
        android:background="@color/bgGrey"
        android:src="@drawable/signout"
        app:layout_constraintEnd_toStartOf="@+id/btnAddStop_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnAddStop_home" />

    <ImageButton
        android:id="@+id/btnViewStop_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@color/bgGrey"
        android:src="@drawable/viewstop"
        app:layout_constraintBottom_toTopOf="@+id/btnSV_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnBuyTicket_home"
        app:layout_constraintTop_toBottomOf="@+id/btnAddStop_home" />

    <ImageButton
        android:id="@+id/btnAddStop_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="208dp"
        android:background="@color/bgGrey"
        android:src="@drawable/addstop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnSignOut_home"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnSV_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/bgGrey"
        android:src="@drawable/studentpass"
        android:text="Student Pass"
        app:layout_constraintBottom_toBottomOf="@+id/btnDisplayMap_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnDisplayMap_home"
        app:layout_constraintTop_toTopOf="@+id/btnDisplayMap_home" />

    <ImageButton
        android:id="@+id/btnBuyTicket_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="2dp"
        android:background="@color/bgGrey"
        android:src="@drawable/purchaseticket"
        app:layout_constraintBottom_toTopOf="@+id/btnDisplayMap_home"
        app:layout_constraintEnd_toStartOf="@+id/btnViewStop_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSignOut_home" />


</androidx.constraintlayout.widget.ConstraintLayout>